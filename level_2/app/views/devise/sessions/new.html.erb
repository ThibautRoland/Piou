<h2 class="text-5xl text-center m-5 p-5">Log in</h2>

<div class="flex flex-row">
  <div class="basis-1/3"></div>
  <div class="basis-1/3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, :class => "px-1 my-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "slate-input w-full" %>
      </div>

      <div class="field">
        <%= f.label :password, :class => "px-1 my-2" %><br />
        <%= f.password_field :password, autocomplete: "current-password", :class => "slate-input w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
  <div class="basis-1/3"></div>
</div>
