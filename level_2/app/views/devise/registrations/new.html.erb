<h2 class="text-5xl text-center m-5 p-5">Sign up</h2>

<div class="flex flex-row">
  <div class="basis-1/3"></div>
  <div class="basis-1/3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, :class => "px-1 my-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "slate-input w-full" %>
      </div>

      <div class="field">
        <%= f.label :password, :class => "px-1 my-2" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", :class => "slate-input w-full" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, :class => "px-1 my-2" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "slate-input w-full" %>
      </div>

      <div class="field">
        <%= f.label :first_name, :class => "px-1 my-2" %><br />
        <%= f.text_field :first_name, autocomplete: "first-name", :class => "slate-input w-full" %>
      </div>

      <div class="field">
        <%= f.label :last_name, :class => "px-1 my-2" %><br />
        <%= f.text_field :last_name, autocomplete: "last-name", :class => "slate-input w-full" %>
      </div>

      <div class="flex justify-center m-3">
        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="basis-1/3"></div>
</div>
